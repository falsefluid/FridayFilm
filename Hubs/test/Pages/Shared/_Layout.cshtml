<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RolsaTechnologies</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RolsaTechnologies.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container d-flex justify-content-between align-items-center w-100">
                <!-- Logo on the Left -->
                <a class="navbar-brand" href="/">
                    <img src="~/images/RT_Logo.png" alt="RolsaTechnologies Logo" style="width:123px; height:64px;"/>
                </a>
                
                <!-- Center Navigation Links -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="/" style="color:black;">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/about-us" style="color:black;">About Us</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="calculateDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color:black;">
                                Calculate
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="calculateDropdown">
                                <li><a class="dropdown-item" href="#">Link 1</a></li>
                                <li><a class="dropdown-item" href="#">Link 2</a></li>
                                <li><a class="dropdown-item" href="#">Link 3</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                
                <!-- Sign Up Button on the Right -->
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <span style="color:white; margin-right:10px;">@User.Identity.Name</span>
                    <a href="/registration/log-out" class="btn btn-primary" style="color:white;">Logout</a>
                }
                else
                {
                    <a href="/registration/sign-up" class="btn btn-primary">Sign Up</a>
                }
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container footer-container">
            <div class="footer-middle">
                <h5>Want to stay up to date?</h5>
                <p>Need information about all the new green energy products or discounts that you may be able to get?</p>
                <div class="newsletter">
                    <input type="email" placeholder="Email Address">
                    <button type="submit">Sign up ></button>
                </div>
                <p>&copy; Rolsa Technologies 2024-2025</p>
            </div>

            <div class="footer-right">
                <div class="footer-links">
                    <div>
                        <h5>Information</h5>
                        <a href="/">Home</a>
                        <a href="/about-us">About us</a>
                        <a href="#">Green Energy</a>
                    </div>
                    <div>
                        <h5>Calculate</h5>
                        <a href="#">Carbon Footprint</a>
                        <a href="#">Energy Usage</a>
                    </div>
                    <div>
                        <h5>Policy</h5>
                        <a href="#">Privacy Policy</a>
                        <a href="#">Terms and Conditions</a>
                    </div>
                </div>
                <div class="contact-info">
                    <p>📞 01234 56789</p>
                    <p>📧 rolsatechnologies@email.co.uk</p>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
