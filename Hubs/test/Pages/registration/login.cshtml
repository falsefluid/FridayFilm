@page
@model RolsaTechnologies.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login">
    <div class="login-container">
        <h2 class="text-center" style="margin-bottom: 20px;">Login</h2>

        @if (ModelState.ContainsKey(string.Empty) && ModelState[string.Empty]?.Errors?.Count > 0)
        {
            <div class="alert alert-danger">
                @if (ModelState[string.Empty]?.Errors != null)
                {
                    @foreach (var error in ModelState[string.Empty]?.Errors ?? Enumerable.Empty<Microsoft.AspNetCore.Mvc.ModelBinding.ModelError>())
                    {
                        <p>@error.ErrorMessage</p>
                    }
                }
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" style="margin:0;" required />
                <div class="text-center" style="margin-top: 10px;">
                    <a href="#">Forgot password?</a>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top:10px;">Login</button>
        </form>
        <div class="text-center" style="margin-top: 10px;">
            <p>Don't have a login? <a href="sign-up">Sign-Up</a></p>
        </div>
    </div>
</div>