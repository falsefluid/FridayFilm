@page
@model ScheduleModel
@{
    ViewData["Title"] = "Scheduling";
}

<div class="schedule-options-container">
    <h1 class="schedule-title">Choose Your Scheduling Option</h1>
    <p class="schedule-description">Select one of the options below to proceed with scheduling your solar panel installation or personal consultation.</p>
    <div class="schedule-options">
        <a class="schedule-option-btn" asp-page="/schedule/installation">
            <div class="schedule-option-content">
                <h2>Solar Panel Installation</h2>
                <p>Schedule a professional installation for your solar panels.</p>
            </div>
        </a>
        <a class="schedule-option-btn" asp-page="/schedule/consultation">
            <div class="schedule-option-content">
                <h2>Personal Consultation</h2>
                <p>Book a consultation to discuss your energy needs.</p>
            </div>
        </a>
    </div>
</div>